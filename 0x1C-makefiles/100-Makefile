CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = /bin/rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ *# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): $(SRC) m.h
	$(CC) $(CFLAGS) -c $*.c -o $@

.PHONY: all clean oclean fclean re
